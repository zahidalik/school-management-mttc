<div class="bg-blue-500 w-full sticky top-0">
  <div class="h-14 flex justify-around items-center">
    <div class="flex items-center space-x-7">
      <%= link_to root_path, class: "text-2xl text-white font-semibold" do %>
        <%= image_tag "MTTC-logos_transparent.png", class: "h-32 w-auto" %>
      <% end %>
      <% if admin_signed_in? %>
        <%= link_to admin_path(current_admin), class: "py-2 text-sm text-white font-bold border-b-0 hover:border-b-2 hover:border-white" do %>
          <i class="fa-solid fa-gears"></i> My Dashboard
        <% end %>
      <% end %>
    </div>
    <div class="flex space-x-2">
      <% unless admin_signed_in? %>
        <%= link_to new_admin_session_path, class: "bg-green-500 text-sm px-3 py-2 rounded-lg text-white font-bold hover:bg-green-400" do %>
          <i class="fa-solid fa-arrow-right-to-bracket"></i> Log in
        <% end %>
      <% else %>
        <%= link_to new_admin_path, class: "bg-green-500 text-sm px-3 py-2 rounded-lg text-white font-bold hover:bg-green-400" do %>
          <i class="fa-solid fa-arrow-right-to-bracket"></i> New Admin
        <% end %>
        <%= button_to("Log Out", destroy_admin_session_path, method: :delete, class: "bg-red-500 text-sm px-3 py-2 rounded-lg text-white font-bold hover:bg-red-400") %>
        <%# <%= link_to destroy_admin_session_path, data: { turbo_method: :delete, turbo_confirm: "You are logging out" }, class: "bg-red-500 text-sm px-3 py-2 rounded-lg text-white font-bold hover:bg-red-400" do %>
          <%# <i class="fa-solid fa-arrow-right-to-bracket"></i> Log out
        <%# <% end %>
      <% end %>
    </div>
  </div>
</div>