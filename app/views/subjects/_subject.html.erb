<%= turbo_frame_tag(dom_id(subject)) do %>
  <div class="mt-1 px-3 py-2 bg-teal-200">
    <div class="p-1 bg-teal-400 text-xl text-gray-700">
      <%= subject.name %>
    </div>
    <div class="text-sm text-gray-700">
      <%= subject.book %> |
      <strong><%= subject.credits %></strong> |
      <%= link_to edit_subject_path(subject) do %>
        <strong>Edit</strong>
      <% end %>
    </div>
  </div>
<% end %>