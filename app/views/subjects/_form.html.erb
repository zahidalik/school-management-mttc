<%= simple_form_for subject, defaults: {
            input_html: { class: "mr-4 pl-2 bg-white text-gray-700 text-lg border-2 rounded focus:outline-none focus:border-2 focus:border-sky-500 focus:ring-sky-500" },
            label_html: { class: "mr-2 text-gray-700 text-xl font-light" },
            error_html: { class: "mx-2 text-red-700"}
          }, html: { class: "flex justify-center items-center" } do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence %>
  <%= f.input :name %>
  <%= f.input :book %>
  <%= f.submit class: "px-2 py-1 bg-green-700 rounded text-gray-50 hover:bg-green-400" %>
<% end %>