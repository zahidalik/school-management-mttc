<%= turbo_frame_tag "admin_list" do %>
  <div class="flex justify-center items-center rounded bg-blue-500 absolute right-7 top-32 z-50">
    <span class="h-10 pl-2 pr-1 py-1 text-lg text-gray-50 flex justify-center items-center">All subjects | credits</span>
    <%= render "subjects/count" %>
  </div>

  <div class="mt-8 flex justify-center items-center">
    <%= link_to subjects_excel_subjects_path(@subjects, format: :xlsx), class: "mt-2 bg-blue-600 px-2 py-1 text-gray-50 shadow-xl" do %>
      All subjects Excel sheet
    <% end %>
  </div>

  <div class="mt-4 mb-8 flex justify-center items-center">
    <%= link_to new_subject_path, data: { turbo_frame: "modal" }, class: "px-3 py-2 bg-green-700 text-2xl text-gray-50 font-light shadow-2xl rounded hover:bg-green-400"  do %>
      New Subject
    <% end %>
  </div>

  <div class="w-full mt-3 mb-16 bg-gray-50">
    <%= turbo_stream_from "subjects_list" %>
    <%= turbo_frame_tag "subjects" do %>
      <div class="mx-8 flex flex-col space-y-3">
        <% @subjects.each do |subject| %>
          <%= render "subjects/subject", subject: subject %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>