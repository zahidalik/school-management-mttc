<%= turbo_frame_tag "modal" do %>
  <div data-controller="form-modal" data-action="turbo:submit-end->form-modal#submitEnd">
    <div class="min-h-screen w-full bg-black bg-opacity-80 flex justify-center items-center fixed z-10">
      <div class="bg-white bg-opacity-100 px-16 py-6">
        <%= link_to subjects_path, class: "mx-2 text-xl text-gray-100 absolute top-24 right-96" do %>
          <i class="fa-solid fa-circle-xmark"></i>
        <% end %>
        <div class="py-2 text-2xl text-gray-700 flex justify-center items-center">New Subject</div>
        <%= render "subjects/form", subject: @subject %>
      </div>
    </div>
  </div>
<% end %>