<%= turbo_frame_tag(dom_id(teacher)) do %>
  <div class="mt-1 px-3 py-2 bg-cyan-400">
    <div class="px-2 py-1 bg-cyan-600 text-xl text-gray-800">
      <%= teacher.full_name %>
    </div>
    <div class="mt-3">
      <%= link_to teacher_path(teacher), data: {"turbo_frame": "_top"}, class: "mr-1 px-2 py-1 bg-cyan-600 text-sm text-gray-800" do %>
        Show
      <% end %>
      <%= link_to edit_teacher_path(teacher), data: { turbo_frame: "teacher_new_edit_modal" }, class: "px-2 py-1 bg-cyan-600 text-sm text-gray-800" do %>
        Edit
      <% end %>
    </div>
  </div>
<% end %>