<%= simple_form_for([student, term, student_terminal_subject], defaults: { label_html: { class: "mr-2 text-lg text-gray-700 font-semibold" }, input_html: { class: "mr-2 px-1 py-1 text-lg text-gray-700 rounded-lg bg-orange-300" } },html: { class: "flex flex-col md:flex md:flex-row justify-center items-center" }) do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence %>
  <div class="bg-orange-500 mr-2 px-1 py-1 text-gray-50"><%= student.first_name %></div>
  <div class="bg-orange-500 mr-2 px-1 py-1 text-gray-50"><%= term.name %></div>
  <%= f.input :period_time %>
  <%= f.input :subject_id, collection: Subject.all %>
  <%= f.input :teacher_id, collection: Teacher.all %>       
  <%= f.submit class: "bg-green-600 px-3 py-2 text-sm text-gray-50 rounded-lg hover:bg-green-400" %>
<% end %>