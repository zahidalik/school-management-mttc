<%= turbo_stream.append("student_terminal_subjects", @student_terminal_subject) %>
<%= turbo_stream.update("student_terminal_subject_credits_count") do %>
  <div>Total Credits taken by <%= @student.first_name %> in <%= @term.name %>: <u><%= @student.credits_in_current_term(@student, @term) %></u></div>
<% end %>
<%= turbo_stream.update("subject_flash") do %>
  <div class="flex justify-center items-center"> 
    <div class="bg-green-300 px-2 py-1 border border-green-600 text-green-600 animate__animated animate__flipInX">
      Subject added
    </div>
  </div>
<% end %>