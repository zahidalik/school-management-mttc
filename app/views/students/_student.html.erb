<%= turbo_frame_tag(dom_id(student)) do %>
  <div class="mt-1 px-3 py-2 bg-lime-400">
    <div class="px-2 py-1 bg-lime-600 text-xl text-gray-800">
      <%= student.first_name %>
      <%= student.second_name %>
      <%= student.last_name.truncate(4) %>
    </div>
    <div class="mt-3">
      <%= link_to student_path(student), data: {"turbo_frame": "_top"}, class: "mr-1 px-2 py-1 bg-lime-600 text-sm text-gray-800" do %>
        Show
      <% end %>
      <%= link_to edit_student_path(student), class: "px-2 py-1 bg-lime-600 text-sm text-gray-800" do %>
        Edit
      <% end %>
    </div>
  </div>
<% end %>