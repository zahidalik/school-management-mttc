<div class="my-6 text-3xl font-light text-gray-700 flex justify-center items-center">
  <%= @student.first_name %>'s Dashboard
</div>
<div class="flex justify-center items-center">
  <div class="grid grid-cols-4 gap-4 text-gray-700">
    <div><u>Name:</u> 
      <%= @student.first_name %>
      <%= @student.second_name %>
      <%= @student.last_name %>
    </div>
    <div><u>Father's Name:</u>  
      <%= @student.father_name %>
    </div>
    <div><u>Mother's Name:</u> 
      <%= @student.mother_name %>
    </div>
    <div><u>D.O.B:</u>
      <%= @student.d_o_b %>
    </div>
    <div><u>Birth Certificate:</u> 
      <% if @student.birth_cert %>
        Available
      <% else %>
        Not Available
      <% end %>
    </div>
    <div><u>Contact:</u>
      <%= @student.contact_one %>
    </div>
    <div><u>Another Contact:</u> 
      <%= @student.contact_two %>
    </div>
    <div><u>Address, City:</u>
      <%= @student.city %>,
      <u>Region:</u>  
      <%= @student.region %>
    </div>
    <div><u>Religion:</u> 
      <%= @student.religion %>
    </div>
    <div><u>Qualifications:</u> 
      <%= @student.qualifications %>
    </div>
    <div><u>Admission Date:</u>
      <%= @student.admission_date %>
    </div>
    <div><u>Admission Number:</u>
      <%= @student.admission_number %>
    </div>
  </div>
</div>
