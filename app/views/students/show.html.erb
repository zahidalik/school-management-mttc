<div class="my-6 text-3xl font-light text-gray-700 flex justify-center items-center">
  <%= @student.first_name %>'s Dashboard
</div>
<div class="flex justify-center items-center">
  <div class="flex flex-col justify-center items-center md:grid md:grid-cols-4 md:gap-2 text-gray-700">
    <div><u>Name:</u> 
      <%= @student.first_name %>
      <%= @student.second_name %>
      <%= @student.last_name %>
    </div>
    <div><u>Father's Name:</u>  
      <%= @student.father_name %>
    </div>
    <div><u>Mother's Name:</u> 
      <%= @student.mother_name %>
    </div>
    <div><u>D.O.B:</u>
      <%= @student.d_o_b %>
    </div>
    <div><u>Birth Certificate:</u> 
      <%= @student.birth_cert %>
    </div>
    <div><u>Contact:</u>
      <%= @student.contact_one %>
    </div>
    <div><u>Another Contact:</u> 
      <%= @student.contact_two %>
    </div>
    <div><u>Address, City:</u>
      <%= @student.city %>,
      <u>Region:</u>  
      <%= @student.region %>
    </div>
    <div><u>Religion:</u> 
      <%= @student.religion %>
    </div>
    <div><u>Qualifications:</u> 
      <%= @student.qualifications %>
    </div>
    <div><u>Admission Date:</u>
      <%= @student.admission_date %>
    </div>
    <div><u>Admission Number:</u>
      <%= @student.admission_number %>
    </div>
  </div>
</div>

<%= turbo_frame_tag "terms" do %>
  <div class="flex justify-around items-center">
    <div class="mt-16 grid grid-cols-3 gap-3">
      <% if @student.terms.any? %>
        <% @student_terms.each do |term| %>
          <%= render "terms/term", term: term %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="mt-8 flex justify-center items-center">
  <%= turbo_frame_tag "new_term" do %>
    <%= link_to new_student_term_path(@student), class: "px-4 py-2 bg-green-600 text-lg text-gray-50 shadow-xl hover:bg-green-400" do %>
      Add New Term
    <% end %>
  <% end %>
</div>

<div class="mt-8 bg-gray-100 flex justify-around items-center text-xl font-light">
  <div>Total Credits taken by <%= @student.first_name %> up to now: <u><%= @student.total_credits(@student) %></u></div>
</div>