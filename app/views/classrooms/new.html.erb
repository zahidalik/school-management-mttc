
<%= turbo_frame_tag "classroom_new_edit_modal" do %>
  <div data-controller="cocurriculum-form" data-action="turbo:submit-end->cocurriculum-form#submitEnd">
    <div class="min-h-screen w-full bg-black bg-opacity-80 flex justify-center items-center fixed z-10">
      <div class="bg-white bg-opacity-100 px-16 py-6 rounded">
        <%= link_to classrooms_path, class: "mx-2 text-xl text-gray-100 absolute top-52 right-52" do %>
          <i class="fa-solid fa-circle-xmark"></i>
        <% end %>
        <div class="py-2 text-2xl text-gray-700 flex justify-center items-center">New Classroom</div>
        <%= render "form", classroom: @classroom  %>
      </div>
    </div>
  </div>
<% end %>